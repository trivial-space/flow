{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true
  },
  "files": [
    "lib/index.ts"
  ],
  "filesGlob": [
    "lib/*.ts",
    "test/**/*",
    "!node_modules/**"
  ],
  "exclude": ["node_modules"],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
